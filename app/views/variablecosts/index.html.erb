<h1>ボーナスのとうろく</h1>
<%= @page_title %>
 
<h3>メニュー</h3>
<ul>
	<li><%= link_to "ここからボーナスをとうろくしよう！", :new_variablecost %></li>
</ul>	
<ul>
<li><%= link_to "さいしょのがめんにもどるよ", :root %></li>
</ul>
 
<% if @fixedcosts.present? %>
<table>
	<thead>
		<tr>
			<th>かもく</th>
			<th>きんがく</th>
			<th>そうさ</th>
		</tr>
	</thead>
	<tbody>
		<% @fixedcosts.each do |fixedcost| %>
			<tr>
				<td><%= fixedcost.name %></td>
				<td><%= fixedcost.description %></td>
				<td>
				<%= link_to "ここからへんしゅう", [:edit, fixedcost] %>
				<%= link_to "ここからけせるよ", fixedcost, method: :delete,
					data: { confirm: "ほんとうにけしていい？"} %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
 
<% else %>
	<p>まだボーナスはないよ！</p>
<% end %>




